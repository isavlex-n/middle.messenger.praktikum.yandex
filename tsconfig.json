{
  "ts-node": {
      "files": true
  },
  "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "typeRoots": [
          "node_modules/@types",
          "typings/app.d.ts",
          "src/types"
      ],
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
  }
}